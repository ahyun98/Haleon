<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.haleon.model.dao.WorkoutDao">
	<resultMap type="workout" id="workoutMap">
		<id column="id" property="id" />
		<result column="reg_date" property="regDate"/>
		<result column="cal" property="cal"/>
		<result column="burn" property="burn"/>
		<result column="work_time" property="workTime"/>
	</resultMap>

	<select id="selectOne" parameterType="String" resultMap="workoutMap">
		SELECT id, reg_date, cal, burn, work_time FROM workout WHERE reg_date = #{regDate}
	</select>
	
	<select id="selectList" resultMap="workoutMap" parameterType="String">
		parameterType="java.util.HashMap">
		SELECT id, reg_date, cal, burn, work_time
		FROM workout
		WHERE id= #{id}
	</select>
	
	<insert id="insertBoard" parameterType="communityBoard">
		INSERT INTO workout VALUES
		(#{id}, #{regDate}, #{cal}, #{burn}, #{workTime})
	</insert>
	
	<update id="updateBoard" parameterType="workout">
		UPDATE workout
		SET
		cal = #{cal},
		burn = #{burn}, 
		work_time = #{workTime},
		WHERE reg_date = #{regDate}
	</update>
	
	<delete id="deleteBoard" parameterType="String">
		DELETE FROM workout WHERE reg_date = #{regDate}
	</delete>

	
</mapper>